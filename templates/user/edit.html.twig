{% extends 'base.html.twig' %}

{% block header_title %}<h1>Modifier <strong>{{ user.username }}</strong></h1>{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
<div class="row">
    
    {{ form_start(userEditionForm, {'action' : path('user_edit', {'id' : user.id})}) }}
    {{ form_widget(userEditionForm) }}
    <div class="btn-div">
        <button type="submit" class="btn btn-success pull-right">Modifier</button>         
        <a href="{{ path('user_list') }}" class="pull-right btn btn-primary">Retour</a>
    </div>
    {{ form_end(userEditionForm) }}
</div>

{% block style %}
<style>
    .btn-div{
        margin-top: 20px;
    }
</style>
{% endblock %}

{% endblock %}
