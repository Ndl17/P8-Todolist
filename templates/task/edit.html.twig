{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col">   
        <div class="content-full">
            <div class="btn-back">
                <a href="{{ path('task_list') }}" class="btn btn-primary btn-return">Retour à la liste des tâches</a>
            </div>

            {{ form_start(form, {
                'action': path('task_edit', {'id': task.id}),
            }) }}

            <div class="form-group">
            <label for="titre">Titre</label>
                {{ form_widget(form.title) }}
                {{ form_help(form.title) }}
                {{ form_errors(form.title) }}
            </div>

            <div class="form-group">
            <label for="contenu">Contenu</label>
                {{ form_widget(form.content) }}
                {{ form_help(form.content) }}
                {{ form_errors(form.content) }}
            </div>

            <div class="form-group">
            <label for="auteur">Auteur</label>
                {{ form_widget(form.user) }}
                {{ form_help(form.user) }}
                {{ form_errors(form.user) }}
            </div>


            <button type="submit" class="btn btn-success btn-submit">Ajouter</button>

            {{ form_end(form) }}            
        </div>
    </div>
</div>
    {% block style %}
    <style>
    .btn-submit{
        margin-top: 20px;
    }
    .btn-return{
        margin-bottom: 20px;
    }
    
    

    </style>
    {% endblock %}

{% endblock %}
